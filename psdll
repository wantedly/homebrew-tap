class PubsubDeadLetterLog < Formula
  version '0.1.1'
  homepage 'https://github.com/wantedly/pubsub-dead-letter-log'
  url "https://github.com/wantedly/pubsub-dead-letter-log/releases/download/v0.1.1/psdll_darwin_amd64.zip"
  sha256 '6d5be05ee4dc6d9ec7fdf548e306ec30d09f867d2778e5c9073b312e2cdc2556'
  head 'https://github.com/wantedly/pubsub-dead-letter-log.git'

  head do
    depends_on 'go' => :build
  end

  def install
    if build.head?
      system 'make', 'build'
    end
    bin.install 'pubsub-dead-letter-log'
  end
end
